  <script>
    const themeToggle = document.getElementById('themeToggle');
    const langToggle = document.getElementById('langToggle');

    langToggle.addEventListener('click', () => {
      const isHinglish = langToggle.textContent.includes('Hinglish');
      langToggle.textContent = isHinglish ? 'ğŸŒ English' : 'ğŸŒ Hinglish';
      document.querySelectorAll('.lang').forEach(el => {
        el.textContent = isHinglish ? el.dataset.hi : el.dataset.en;
      });
    });

    themeToggle.addEventListener('click', () => {
      const body = document.body;
      const current = body.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      body.setAttribute('data-theme', next);
      themeToggle.textContent = next === 'dark' ? 'â˜€ï¸ Light' : 'ğŸŒ™ Dark';
    });

    const hourHand = document.getElementById('hourHand');
    const minHand = document.getElementById('minHand');
    const secHand = document.getElementById('secHand');

    function setClockHands(date = new Date()){
      const sec = date.getSeconds();
      const min = date.getMinutes() + sec/60;
      const hour = (date.getHours()%12) + min/60;
      const secDeg = sec * 6;
      const minDeg = min * 6;
      const hourDeg = hour * 30;
      secHand.style.transform = `translate(-50%,-100%) rotate(${secDeg}deg)`;
      minHand.style.transform = `translate(-50%,-100%) rotate(${minDeg}deg)`;
      hourHand.style.transform = `translate(-50%,-100%) rotate(${hourDeg}deg)`;
    }
    setClockHands();
    setInterval(() => setClockHands(new Date()), 1000);

    const visitorEl = document.getElementById('visitorNumber');
    let displayedVisitors = parseInt(visitorEl.textContent,10) || 272;
    let targetVisitors = displayedVisitors;
    let ticking = false;

    function nextTarget(current){
      const min = 50, max = 1500;
      let raw = Math.floor(Math.random()*(max-min+1))+min;
      const maxJump = Math.max(40, Math.round(current*0.25));
      if(Math.abs(raw-current) > 200){
        if(raw > current) raw = current + Math.floor(Math.random()*maxJump)+10;
        else raw = current - (Math.floor(Math.random()*maxJump)+10);
        if(raw < min) raw = min; if(raw > max) raw = max;
      }
      return raw;
    }

    function animateToTarget(){
      if(ticking) return;
      ticking = true;
      const start = displayedVisitors;
      const end = targetVisitors;
      const duration = 1800 + Math.random()*1200;
      const startTime = performance.now();

