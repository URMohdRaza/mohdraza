  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const themeToggle = document.getElementById('themeToggle');
      const langToggle = document.getElementById('langToggle');
      const visitorEl = document.getElementById('visitorNumber');
      const hourHand = document.getElementById('hourHand');
      const minHand = document.getElementById('minHand');
      const secHand = document.getElementById('secHand');

      // --- CONFIG: CountAPI namespace & key (uses your GitHub username)
      const COUNTAPI_NAMESPACE = 'urmohdraza-portfolio';
      const COUNTAPI_KEY = 'visitors';
      const HIT_URL = `https://api.countapi.xyz/hit/${COUNTAPI_NAMESPACE}/${COUNTAPI_KEY}`;
      const GET_URL = `https://api.countapi.xyz/get/${COUNTAPI_NAMESPACE}/${COUNTAPI_KEY}`;

      // Language toggle (EN <-> HINGLISH)
      langToggle.addEventListener('click', () => {
        const toHinglish = langToggle.textContent.includes('Hinglish');
        langToggle.textContent = toHinglish ? 'üåê English' : 'üåê Hinglish';
        document.querySelectorAll('.lang').forEach(el => el.textContent = toHinglish ? el.dataset.hi : el.dataset.en);
      });

      // Theme toggle (dark <-> light)
      themeToggle.addEventListener('click', () => {
        const body = document.body;
        const current = body.getAttribute('data-theme');
        const next = current === 'dark' ? 'light' : 'dark';
        body.setAttribute('data-theme', next);
        themeToggle.textContent = next === 'dark' ? '‚òÄÔ∏è Light' : 'üåô Dark';
      });

      // Analog clock
      function setClockHands(){
        const now = new Date();
        const sec = now.getSeconds();
        const min = now.getMinutes() + sec/60;
        const hour = (now.getHours()%12) + min/60;
        secHand.style.transform = `translate(-50%,-100%) rotate(${sec*6}deg)`;
        minHand.style.transform = `translate(-50%,-100%) rotate(${min*6}deg)`;
        hourHand.style.transform = `translate(-50%,-100%) rotate(${hour*30}deg)`;
      }
      setClockHands();
      setInterval(setClockHands, 1000);

      // Visitor counter: Hit once (increments) then poll GET periodically to show live number
      function showCount(value){
        visitorEl.textContent = Number(value).toLocaleString();
      }

      // Try to HIT (increment) on page load
      fetch(HIT_URL)
        .then(r => r.json())
        .then(data => {
          if(data && data.value !== undefined) showCount(data.value);
        })
        .catch(() => {
          // fallback: try GET (maybe already exists) or keep default
          fetch(GET_URL).then(r=>r.json()).then(d=>{ if(d && d.value !== undefined) showCount(d.value); }).catch(()=>{});
        });

      // Poll every 12 seconds to update displayed count without incrementing
      setInterval(()=>{
        fetch(GET_URL)
          .then(r => r.json())
          .then(data => { if(data && data.value !== undefined) showCount(data.value); })
          .catch(()=>{});
      }, 12000);

    });
  </script>
